generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String?
  friends   User[]   @relation("UserFriends")
  createdAt DateTime @default(now())
  messagesSent    Message[] @relation("sent")
  messagesReceived Message[] @relation("received")

  User User[] @relation("UserFriends")
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  fromId    Int
  toId      Int
  createdAt DateTime @default(now())

  from User @relation("sent", fields: [fromId], references: [id])
  to   User @relation("received", fields: [toId], references: [id])
}